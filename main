#include <stdio.h>
#include <stdlib.h>

int main(){
 char operators;
 int a,b,c;

 printf("Enter the operator(+-*/):");
 scanf("%c",&operators);

 printf("Enter two integers:");
 scanf("%d %d",&a,&b);

 switch(operators){
  case '+':
      printf("%d+%d=%d",a,b,a+b);
      break;

  case '-':
    printf("%d-%d=%d",a,b,a-b);
    break;

  case '*':
    printf("%d*%d=%d",a,b,a*b);
    break;

  case '/':
  printf("%d/%d=%d",a,b,a/b);
  break;

  default:
    printf("Please enter a valid operator.");
 }
    return 0;
}


